<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="50dp"
    android:layout_marginBottom="5dp"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

        <ImageButton
            android:id="@+id/hot_pt_box"
            android:padding="0dp"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:src="@drawable/hot_pt_box"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:id="@+id/text_box"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:textSize="14dp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/nano_sans"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:layout_width="290dp"
                    android:layout_height="22dp"
                    android:text="인기 게시글 제목이에요" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                        <TextView
                            android:textSize="10dp"
                            android:id="@+id/tv_name"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/nano_sans"
                            android:textColor="@color/text_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="작성자" />

                        <TextView
                            android:textSize="10dp"
                            android:id="@+id/tv_seperate"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:includeFontPadding="false"
                            android:textColor="@color/text_gray"
                            android:fontFamily="@font/nano_sans"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="/" />

                        <TextView
                            android:textSize="10dp"
                            android:id="@+id/tv_time"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/nano_sans"
                            android:textColor="@color/text_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="2024년 07월 28일" />

                </LinearLayout>

        </LinearLayout>





        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/text_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <ImageButton
                    android:paddingHorizontal="10dp"
                    android:layout_width="19.71dp"
                    android:layout_height="17dp"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/heart_selected"/>

                <LinearLayout
                    android:layout_marginLeft="3.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/heart_number"
                            android:layout_width="14dp"
                            android:layout_height="13dp"
                            android:textSize="11dp"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/nano_sans"
                            android:textColor="@color/pink"
                            android:text="16"/>
                </LinearLayout>



        </LinearLayout>



</RelativeLayout>


